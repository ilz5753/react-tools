{
  "name": "react-tools",
  "version": "1.0.0",
  "description": "",
  "source": "index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "types": "src/type.d.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "start": "microbundle-crl watch --no-compress --format umd",
    "release": "release-it",
    "typecheck": "tsc --noEmit",
    "copyDts": "node script.js"
  },
  "keywords": [
    "react",
    "react-native",
    "ios",
    "android",
    "web"
  ],
  "repository": "https://github.com/ilz5753/react-tools",
  "author": "Mehdi abdollahi <mehdi.abdollahi3578@gmail.com> (https://github.com/ilz5753)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilz5753/react-tools/issues"
  },
  "homepage": "https://github.com/ilz5753/react-tools#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "dependencies": {
    "glob": "^10.3.10",
    "lodash.foreach": "^4.5.0",
    "lodash.includes": "^4.3.0",
    "lodash.indexof": "^4.0.5",
    "lodash.isfunction": "^3.0.9",
    "lodash.isnull": "^3.0.0",
    "lodash.isundefined": "^3.0.1",
    "lodash.map": "^4.6.0",
    "lodash.noop": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/lodash.foreach": "^4.5.9",
    "@types/lodash.includes": "^4.3.9",
    "@types/lodash.indexof": "^4.0.9",
    "@types/lodash.isfunction": "^3.0.9",
    "@types/lodash.isnull": "^3.0.9",
    "@types/lodash.isundefined": "^3.0.9",
    "@types/lodash.map": "^4.6.13",
    "@types/lodash.noop": "^3.0.9",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "microbundle-crl": "^0.13.11",
    "rollup": "^4.6.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
